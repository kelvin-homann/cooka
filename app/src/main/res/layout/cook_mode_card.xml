<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="0dp"
    android:layout_height="0dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="0dp">

    <!-- Contraints from old layout
    card_view:layout_constraintBottom_toTopOf="@+id/pageIndicatorView"
    card_view:layout_constraintEnd_toEndOf="parent"
    card_view:layout_constraintStart_toStartOf="parent"
    card_view:layout_constraintTop_toTopOf="@+id/frameLayout"
     -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"
            android:textSize="20sp"/>

        <View style="@style/Divider"/>

        <TextView
            android:id="@+id/card_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Krasse Angaben zu diesem Step die so lang sind dass man eine neue Zeile braucht"
            android:textAlignment="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="20sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
